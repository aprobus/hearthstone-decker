<div class="row">

  <div style="border: 1px solid #D9D9D9; border-radius: 3px; padding: 3px;">
    <%= form_for(@arena_card_deck, :html => { :class => 'form-inline', :role => 'form' }) do |f| %>
      <div class="form-group">
        <h4>New Deck:</h4>
      </div>
      <div class="form-group">
        <%= f.collection_select :hero_id, @heroes, :id, :display_name, { :selected => @arena_card_deck.hero_id }, { :class => 'form-control' } %>
      </div>

      <%= f.submit 'Add', :class => 'btn btn-default' %>
    <% end %>

  </div>

  <h1><%= link_to 'Arena Card Decks', arena_card_decks_stats_path %></h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Hero</th>
        <th>Start Date</th>
        <th>Wins</th>
        <th>Losses</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @arena_card_decks.each do |arena_card_deck| %>
        <tr class="<%= arena_card_deck.add_games? ? 'info' : 'inactive' %>">
          <td><%= arena_card_deck.hero.display_name %></td>
          <td><%= arena_card_deck.created_at.to_formatted_s(:date) %></td>
          <td><%= arena_card_deck.num_games_won %></td>
          <td><%= arena_card_deck.num_games_lost %></td>
          <td><%= link_to 'Show', arena_card_deck %></td>
          <td><%= link_to 'Edit', edit_arena_card_deck_path(arena_card_deck) %></td>
          <td><%= link_to 'Destroy', arena_card_deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
